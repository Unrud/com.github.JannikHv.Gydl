{
  "app-id": "com.github.JannikHv.Gydl",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.34",
  "sdk": "org.gnome.Sdk",
  "command": "gydl",
  "rename-icon": "gydl",
  "copy-icon": true,
  "finish-args": [
     "--socket=wayland",
     "--socket=x11",
     "--share=ipc",     
     "--share=network",
     "--filesystem=xdg-download"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig"
  ],
  "modules": [
    "shared-modules/lame/lame-3.99.5.json",
    {
      "name": "chrpath",
      "sources": [{
        "type": "archive",
        "url": "http://deb.debian.org/debian/pool/main/c/chrpath/chrpath_0.16.orig.tar.gz",
        "sha256": "bb0d4c54bac2990e1bdf8132f2c9477ae752859d523e141e72b3b11a12c26e7b"
      }],
      "cleanup": ["*"]
    },
    {
      "name": "ffmpeg",
      "config-opts": [
        "--enable-shared",
        "--disable-static",
        "--disable-doc",
        "--disable-ffplay",
        "--disable-devices",
        "--enable-gnutls",
        "--enable-libmp3lame",
        "--enable-libvorbis"
      ],
      "sources": [{
        "type": "archive",
        "url": "https://www.ffmpeg.org/releases/ffmpeg-4.2.1.tar.xz",
        "sha256": "cec7c87e9b60d174509e263ac4011b522385fd0775292e1670ecc1180c9bb6d4"
      }],
      "post-install": [
        "install -Dm644 COPYING.LGPLv3 /app/share/licenses/ffmpeg/COPYING",
        "chrpath -d /app/bin/ffmpeg"
      ],
      "cleanup": ["/share/ffmpeg"]
    },
    {
      "name": "youtube-dl",
      "no-autogen": true,
      "no-make-install": true,
      "make-args": ["youtube-dl", "PYTHON=/usr/bin/python3"],
      "sources": [{
        "type": "archive",
        "url": "https://github.com/ytdl-org/youtube-dl/archive/2020.02.16.tar.gz",
        "sha256": "192e813f6d1c6dc92185c70712754894de8dac3867fd158351df53526cbb4d97"
      }],
      "post-install": ["install -Dm0755 -t /app/bin youtube-dl"]
    },
    {
      "name": "gydl",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/JannikHv/gydl.git",
          "commit": "18d4819511c668b2e1225aabb3de5bcab48b1c46"
        },
        {
          "type": "patch",
          "path": "01a8e168fa9d6017bbbf96f3c0d80c436fd1aeed.patch"
        }
      ],
      "post-install": [
        "install -Dm644 ../LICENSE /app/share/licenses/gydl/LICENSE"
      ]
    }
  ]
}
